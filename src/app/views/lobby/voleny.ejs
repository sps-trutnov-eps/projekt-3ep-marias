<%- include('../layout/hlavickaLobby') %>
<div class="row">

  <div class="col-7">
    <div class="text-center mb-5">
      <h1>Volený mariáš</h1>
    </div>
    <div class="d-flex flex-column" style="width: 200px; margin: 0 auto">
      <a href="/lobby/novyStulVoleny" type="button" name="" id="" class="btn btn-success btn-lg mb-3">Nový stůl</a>
      <a href="/lobby/pravidlaVoleny" type="button" name="" id="" class="btn btn-success btn-lg mb-3">Pravidla</a>
      <a type="button" name="" id="" class="btn btn-success btn-lg mb-3">Nastavení</a>
    </div>
  </div>

  <div class="col-5">
    <h1 class="mb-4 text-center">Seznam stolů</h1>
    <div class="border border-3" style="height:500px;" id="tableDivVoleny"> 
      <ul class="list-unstyled fs-4">
      </ul>
    </div> 
  </div>

  <div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="passwordModalLabel">Zadejte heslo pro připojení k hře</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="password" class="form-control" id="passwordInput" placeholder="Zadejte heslo">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
                <button type="button" class="btn btn-primary" id="confirmPasswordBtn">Potvrdit heslo</button>
            </div>
        </div>
    </div>
</div>
  

</div>
